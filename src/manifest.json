{
	"name": "CommentExtension",
	"version": "1.0.0",
	"manifest_version": 3,
	"host_permissions": [
		"https://api.search.nicovideo.jp/*"
	],
	"description": "Comment Extension For Chrome",
	"content_scripts": [
		{
			"matches": [ "https://www.nicovideo.jp/watch/so*" ],
			"js": [ "js/build_search_word.js", "js/script.js" ]
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}